<!DOCTYPE html>
<html lang ="en">
  <head>
    <%- include('../views/layouts/head'); %>
  </head>
  <body>
    <header>
      <%- include('../views/layouts/navbar'); %>
    </header>
    <div class="container">
      <div class="row main shadow mt-5 rounded rounded-2">
        <div class="col-12 col-lg-3 border-end p-4">
          <h5>Sort By</h5>
          <p>
            <button id="sort-datetime-seen" type="button" class="btn btn-light">
              <i id="sort-date-time-seen-icon" class="bi bi-list"></i>
              Datetime
            </button>
          </p>

          <p>
            <button id="sort-distance" type="button" class="btn btn-light">
              <i id="sort-distance-icon" class="bi bi-list"></i>
              Distance
            </button>
          </p>

          <div class="form-check d-flex align-items-center">
            <input class="form-check-input me-2" type="checkbox" value="" id="identification">
            <label class="form-check-label" for="identification">
              Identified
            </label>
          </div>

          <div class="mt-4">
            <a href="/add_sight" class="btn btn-primary">
              <i class="bi bi-plus"></i>
              Add
            </a>
          </div>
        </div>
        <div class="col-12 col-lg-9 p-3 photo-list">
          <div class="row" id="sights">

          </div>

        </div>
      </div>
    </div>
  </body>

  <script src="/javascripts/index.js"></script>
</html>
