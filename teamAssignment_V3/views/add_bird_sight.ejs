<!DOCTYPE html>
<html lang ="en">
<head>
    <%- include('../views/layouts/head'); %>
</head>
<header>
    <%- include('../views/layouts/navbar'); %>
</header>
<body>
<div class="container">
    <h2 class="mt-3">Add Bird Sighting</h2>

    <form id="add-form" class="p-4 shadow">
        <div class="mt-3">
            <label class="form-label">Bird Photo: </label>
            <br />
            <label
                    class="bg-light shadow rounded-2 d-flex align-items-center justify-content-center"
                    style="width: 150px; height: 150px">
                <i class="bi bi-image" id="photo-placeholder" style="font-size: 50px" role="button"></i>
                <img id="photo-result" width="150" height="150" class="d-none"/>
                <input id="photo" type="file" accept="image/*" hidden/>
            </label>
        </div>
        <div class="mt-3">
            <label class="form-label">Your name: </label>
            <input
                    name="name"
                    required class="form-control" placeholder="Enter your name"/>
        </div>

        <div class="mt-3">
            <label class="form-label">Datetime: </label>
            <input

                    name="datetime"
                    required class="form-control w-25" type="datetime-local"/>
        </div>

        <div class="mt-3">
            <label class="form-label">Geolocation: </label>
            <p id="geolocation">

            </p>
            <button
                    type="button"
                    id="get-location"
                    class="btn btn-info">Get Current Location</button>
        </div>

        <div class="mt-3">
            <label class="form-label">Description: </label>
            <textarea
                    name="description"
                    required
                    placeholder="Enter sighting description"
                    rows="5"
                    class="form-control"></textarea>
        </div>

        <div class="mt-3">
            <label class="form-label">Identification: </label>
            <input
                    id="identification"
                    name="identification"
                   placeholder="Enter identification HERE, if you are not sure, leave it EMPTY." class="form-control"/>
        </div>

        <div class="mt-3">
            <label class="form-label">Scientific Name: </label>
            <input
                    id="scientificName"
                    name="scientificName"
                    placeholder="Enter Scientific Name HERE, if you are not sure, leave it EMPTY." class="form-control"/>
        </div>

        <div class="mt-3">
            <label class="form-label">Bird Description: </label>
            <input
                    id="DBPediaDescription"
                    name="DBPediaDescription"
                    placeholder="Enter Description HERE, if you are not sure, leave it EMPTY." class="form-control"/>
        </div>

        <div class="mt-3">
            <label class="form-label">DBPedia URL: </label>
            <input
                    id="DBPediaURL"
                    name="DBPediaURL"
                     placeholder="Enter DBPedia URL HERE, if you are not sure, leave it EMPTY." class="form-control"/>
        </div>

        <div class="mt-3">
            <a href="/" type="button" class="btn btn-secondary">Cancel</a>
            <button class="btn btn-primary">Save</button>
        </div>
    </form>
</div>

<script src="/javascripts/add_bird.js"></script>
<script src="/javascripts/index_db.js"></script>
</body>
</html>